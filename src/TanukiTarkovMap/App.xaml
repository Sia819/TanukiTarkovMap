<Application x:Class="TanukiTarkovMap.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TanukiTarkovMap"
             xmlns:svc="clr-namespace:TanukiTarkovMap.Models.Services"
             Startup="Application_Startup"
             Exit="Application_Exit"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/ComboBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- ServiceLocator를 Application 리소스로 등록 -->
            <svc:ServiceLocator x:Key="Locator"/>

            <!-- 공통 Converter -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <!-- 앱 테마 색상 -->
            <Color x:Key="ActiveBorderColor">#FF97C1F2</Color>
            <Color x:Key="InactiveBorderColor">#FF3A3A3A</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
