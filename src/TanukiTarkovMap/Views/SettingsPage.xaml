<UserControl x:Class="TanukiTarkovMap.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#FF000000">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="12,8">

            <!-- 타르코프 경로 설정 섹션 -->
            <Border Background="#FF1A1A1A"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="타르코프 경로 설정"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,6"/>

                    <!-- 게임 폴더 경로 -->
                    <StackPanel Margin="0,3,0,8">
                        <TextBlock Text="게임 폴더 경로 / Game Folder Path"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,3"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="GameFolderTextBox"
                                     Grid.Column="0"
                                     Height="24"
                                     Padding="6,4"
                                     FontSize="9"
                                     Background="#FF2A2A2A"
                                     Foreground="White"
                                     BorderBrush="#FF3A3A3A"
                                     BorderThickness="1"
                                     VerticalContentAlignment="Center"
                                     LostFocus="GameFolder_LostFocus"/>
                            <Button Grid.Column="1"
                                    Content="찾아보기"
                                    Width="65"
                                    Height="24"
                                    Margin="4,0,0,0"
                                    Background="#FF3A3A3A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="9"
                                    Click="BrowseGameFolder_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="3"
                                                            Padding="8,4">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FF5A5A5A"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        <TextBlock Text="경로에 {0}을 사용하면 현재 사용자 이름으로 자동 치환됩니다"
                                   FontSize="8"
                                   Foreground="#FF666666"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- 스크린샷 폴더 경로 -->
                    <StackPanel Margin="0,3,0,4">
                        <TextBlock Text="스크린샷 폴더 경로 / Screenshots Folder Path"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,3"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ScreenshotsFolderTextBox"
                                     Grid.Column="0"
                                     Height="24"
                                     Padding="6,4"
                                     FontSize="9"
                                     Background="#FF2A2A2A"
                                     Foreground="White"
                                     BorderBrush="#FF3A3A3A"
                                     BorderThickness="1"
                                     VerticalContentAlignment="Center"
                                     LostFocus="ScreenshotsFolder_LostFocus"/>
                            <Button Grid.Column="1"
                                    Content="찾아보기"
                                    Width="65"
                                    Height="24"
                                    Margin="4,0,0,0"
                                    Background="#FF3A3A3A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="9"
                                    Click="BrowseScreenshotsFolder_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="3"
                                                            Padding="8,4">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FF5A5A5A"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        <TextBlock Text="경로에 {0}을 사용하면 현재 사용자 이름으로 자동 치환됩니다"
                                   FontSize="8"
                                   Foreground="#FF666666"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 프로그램 설정 섹션 -->
            <Border Background="#FF1A1A1A"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="프로그램 설정"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,6"/>

                    <!-- 전역 단축키 설정 -->
                    <TextBlock Text="전역 단축키"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,3,0,4"/>

                    <!-- 단축키 활성화 -->
                    <StackPanel Orientation="Vertical" Margin="12,2,0,6">
                        <CheckBox x:Name="HotkeyEnabledCheckBox"
                                  Content="전역 단축키 사용"
                                  Foreground="White"
                                  FontSize="10"
                                  HorizontalAlignment="Left"
                                  Checked="HotkeyEnabled_Changed"
                                  Unchecked="HotkeyEnabled_Changed"/>
                        <TextBlock Text="단축키로 프로그램을 트레이로 숨기거나 표시합니다"
                                   Foreground="#FF888888"
                                   FontSize="8"
                                   Margin="18,2,0,0"/>
                    </StackPanel>

                    <!-- 단축키 입력 -->
                    <StackPanel x:Name="HotkeyInputPanel"
                                Orientation="Vertical"
                                Margin="24,2,0,6">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                            <TextBlock Text="단축키:"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       FontSize="9"
                                       Margin="0,0,8,0"/>
                            <Button x:Name="HotkeyButton"
                                    Width="100"
                                    Height="24"
                                    Background="#FF3A3A3A"
                                    Foreground="White"
                                    BorderThickness="1"
                                    BorderBrush="#FF555555"
                                    Content="F11"
                                    FontSize="9"
                                    Focusable="True"
                                    IsTabStop="True"
                                    KeyboardNavigation.AcceptsReturn="False"
                                    Click="HotkeyButton_Click"
                                    KeyDown="HotkeyButton_KeyDown"
                                    PreviewKeyDown="HotkeyButton_PreviewKeyDown"
                                    LostFocus="HotkeyButton_LostFocus">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="3"
                                                            Padding="6,3">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FF5A5A5A"/>
                                                            <Setter Property="BorderBrush" Value="#FF777777"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#FF2A2A2A"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                        <TextBlock Text="(클릭 후 키를 눌러 설정하세요)"
                                   Foreground="#FF888888"
                                   FontSize="8"
                                   Margin="0,1,0,0"/>
                    </StackPanel>

                    <!-- 파일 자동 정리 설정 -->
                    <TextBlock Text="파일 자동 정리"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,3,0,4"/>

                    <!-- 로그 폴더 자동 정리 -->
                    <StackPanel Orientation="Vertical" Margin="12,2,0,6">
                        <CheckBox x:Name="AutoDeleteLogsCheckBox"
                                  Content="로그 폴더 자동 정리"
                                  Foreground="White"
                                  FontSize="10"
                                  HorizontalAlignment="Left"
                                  Checked="AutoDeleteLogs_Changed"
                                  Unchecked="AutoDeleteLogs_Changed"/>
                        <TextBlock Text="프로그램 시작 시 이전 로그 폴더를 자동으로 삭제합니다"
                                   Foreground="#FF888888"
                                   FontSize="8"
                                   Margin="18,2,0,0"/>
                    </StackPanel>

                    <!-- 스크린샷 자동 정리 -->
                    <StackPanel Orientation="Vertical" Margin="12,2,0,4">
                        <CheckBox x:Name="AutoDeleteScreenshotsCheckBox"
                                  Content="스크린샷 자동 정리"
                                  Foreground="White"
                                  FontSize="10"
                                  HorizontalAlignment="Left"
                                  Checked="AutoDeleteScreenshots_Changed"
                                  Unchecked="AutoDeleteScreenshots_Changed"/>
                        <TextBlock Text="레이드 종료 시 스크린샷을 자동으로 삭제합니다"
                                   Foreground="#FF888888"
                                   FontSize="8"
                                   Margin="18,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
