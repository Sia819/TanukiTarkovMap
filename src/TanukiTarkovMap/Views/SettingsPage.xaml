<UserControl x:Class="TanukiTarkovMap.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:vm="clr-namespace:TanukiTarkovMap.ViewModels"
             xmlns:behaviors="clr-namespace:TanukiTarkovMap.Behaviors"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#FF000000">
    <UserControl.DataContext>
        <vm:SettingsViewModel/>
    </UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="12,8">

            <!-- 타르코프 경로 설정 섹션 -->
            <Border Background="#FF1A1A1A"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="타르코프 경로 설정"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,6"/>

                    <!-- 게임 폴더 경로 -->
                    <StackPanel Margin="0,3,0,8">
                        <TextBlock Text="게임 폴더 경로 / Game Folder Path"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,3"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding GameFolder, UpdateSourceTrigger=LostFocus}"
                                     Height="24"
                                     Padding="6,4"
                                     FontSize="9"
                                     Background="#FF2A2A2A"
                                     Foreground="White"
                                     BorderBrush="#FF3A3A3A"
                                     BorderThickness="1"
                                     VerticalContentAlignment="Center"/>
                            <Button Grid.Column="1"
                                    Content="찾아보기"
                                    Command="{Binding BrowseGameFolderCommand}"
                                    Width="65"
                                    Height="24"
                                    Margin="4,0,0,0"
                                    Background="#FF3A3A3A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="9">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="3"
                                                            Padding="8,4">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FF5A5A5A"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- 스크린샷 폴더 경로 -->
                    <StackPanel Margin="0,3,0,4">
                        <TextBlock Text="스크린샷 폴더 경로 / Screenshots Folder Path"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,3"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding ScreenshotsFolder, UpdateSourceTrigger=LostFocus}"
                                     Height="24"
                                     Padding="6,4"
                                     FontSize="9"
                                     Background="#FF2A2A2A"
                                     Foreground="White"
                                     BorderBrush="#FF3A3A3A"
                                     BorderThickness="1"
                                     VerticalContentAlignment="Center"/>
                            <Button Grid.Column="1"
                                    Content="찾아보기"
                                    Command="{Binding BrowseScreenshotsFolderCommand}"
                                    Width="65"
                                    Height="24"
                                    Margin="4,0,0,0"
                                    Background="#FF3A3A3A"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="9">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="3"
                                                            Padding="8,4">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FF5A5A5A"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 프로그램 설정 섹션 -->
            <Border Background="#FF1A1A1A"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="프로그램 설정"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,6"/>

                    <!-- 전역 단축키 설정 -->
                    <TextBlock Text="전역 단축키"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,3,0,4"/>

                    <!-- 단축키 활성화 -->
                    <StackPanel Orientation="Vertical" Margin="12,2,0,6">
                        <CheckBox IsChecked="{Binding HotkeyEnabled}"
                                  Content="전역 단축키 사용"
                                  Foreground="White"
                                  FontSize="10"
                                  HorizontalAlignment="Left"/>
                        <TextBlock Text="단축키로 프로그램을 트레이로 숨기거나 표시합니다"
                                   Foreground="#FF888888"
                                   FontSize="8"
                                   Margin="18,2,0,0"/>
                    </StackPanel>

                    <!-- 단축키 입력 -->
                    <StackPanel x:Name="HotkeyInputPanel"
                                Orientation="Vertical"
                                Margin="24,2,0,6"
                                IsEnabled="{Binding HotkeyEnabled}">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                            <TextBlock Text="단축키:"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       FontSize="9"
                                       Margin="0,0,8,0"/>
                            <Button Width="100"
                                    Height="24"
                                    Background="#FF3A3A3A"
                                    Foreground="White"
                                    BorderThickness="1"
                                    BorderBrush="#FF555555"
                                    Content="{Binding HotkeyKey}"
                                    FontSize="9"
                                    Focusable="True"
                                    IsTabStop="True"
                                    KeyboardNavigation.AcceptsReturn="False">
                                <i:Interaction.Behaviors>
                                    <behaviors:HotkeyInputBehavior Hotkey="{Binding HotkeyKey, Mode=TwoWay}"/>
                                </i:Interaction.Behaviors>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="3"
                                                            Padding="6,3">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#FF5A5A5A"/>
                                                            <Setter Property="BorderBrush" Value="#FF777777"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#FF2A2A2A"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                        <TextBlock Text="(클릭 후 키를 눌러 설정하세요)"
                                   Foreground="#FF888888"
                                   FontSize="8"
                                   Margin="0,1,0,0"/>
                    </StackPanel>

                    <!-- 파일 자동 정리 설정 -->
                    <TextBlock Text="파일 자동 정리"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,3,0,4"/>

                    <!-- 로그 폴더 자동 정리 -->
                    <StackPanel Orientation="Vertical" Margin="12,2,0,6">
                        <CheckBox IsChecked="{Binding AutoDeleteLogs}"
                                  Content="로그 폴더 자동 정리"
                                  Foreground="White"
                                  FontSize="10"
                                  HorizontalAlignment="Left"/>
                        <TextBlock Text="프로그램 시작 시 이전 로그 폴더를 자동으로 삭제합니다"
                                   Foreground="#FF888888"
                                   FontSize="8"
                                   Margin="18,2,0,0"/>
                    </StackPanel>

                    <!-- 스크린샷 자동 정리 -->
                    <StackPanel Orientation="Vertical" Margin="12,2,0,4">
                        <CheckBox IsChecked="{Binding AutoDeleteScreenshots}"
                                  Content="스크린샷 자동 정리"
                                  Foreground="White"
                                  FontSize="10"
                                  HorizontalAlignment="Left"/>
                        <TextBlock Text="레이드 종료 시 스크린샷을 자동으로 삭제합니다"
                                   Foreground="#FF888888"
                                   FontSize="8"
                                   Margin="18,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 개발자 도구 섹션 -->
            <Border Background="#FF1A1A1A"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="개발자 도구"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,6"/>

                    <!-- Pilot 설정 페이지로 이동 -->
                    <Button Content="Tarkov Market 설정 페이지로 이동"
                            Command="{Binding NavigateToPilotCommand}"
                            Height="28"
                            Background="#FF3A3A3A"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="10"
                            HorizontalAlignment="Left"
                            Padding="12,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="3"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF5A5A5A"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <TextBlock Text="tarkov-market.com/pilot 페이지를 표시합니다"
                               Foreground="#FF888888"
                               FontSize="8"
                               Margin="0,4,0,0"/>

                    <!-- URL 직접 입력 -->
                    <TextBlock Text="URL 직접 이동"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,12,0,4"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Text="{Binding CustomUrl, UpdateSourceTrigger=PropertyChanged}"
                                 Height="24"
                                 Padding="6,4"
                                 FontSize="9"
                                 Background="#FF2A2A2A"
                                 Foreground="White"
                                 BorderBrush="#FF3A3A3A"
                                 BorderThickness="1"
                                 VerticalContentAlignment="Center"/>
                        <Button Grid.Column="1"
                                Content="이동"
                                Command="{Binding NavigateToCustomUrlCommand}"
                                Width="50"
                                Height="24"
                                Margin="4,0,0,0"
                                Background="#FF3A3A3A"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="9">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="3"
                                                        Padding="8,4">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF5A5A5A"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    <TextBlock Text="디버그 모드로 지정된 URL로 이동합니다 (JavaScript 비활성화)"
                               Foreground="#FF888888"
                               FontSize="8"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
