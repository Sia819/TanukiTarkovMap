<UserControl x:Class="TanukiTarkovMap.Views.WebBrowserUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
             xmlns:vm="clr-namespace:TanukiTarkovMap.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:WebBrowserViewModel/>
    </UserControl.DataContext>

    <Grid>
        <!-- CefSharp ChromiumWebBrowser - 코드에서 생성 -->
        <Grid x:Name="BrowserContainer"/>

        <!-- 로딩 오버레이 -->
        <Border Background="#DD1A1A1A"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="로딩 중..."
                           FontSize="16"
                           Foreground="#FF888888"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
